
      <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <h2><%= @restaurant.name %></h2>
          <p><%= @restaurant.city %>,&nbsp;<%= @restaurant.state %></p>
          <p>Posted on January 1, 2018 at 12:00 PM</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-rounded" src="http://placehold.it/350x300" alt="" class="img-responsive">

         
          <!-- Post Content -->
          <p class="lead"><%= @restaurant.description %></p>

          
          <div class="row">
            <h3>Reviews</h3>
            <p><%= link_to "Write a Review", new_restaurant_review_path(restaurant_id: @restaurant.id) %></p>

            <br>
            <p class="star-rating" data-score=<%= @avg_rating %>></p>
            <br>

            <table class="table" border="0">
              <thead>
                <tr>
                  <th class="col-md-3"></th>
                  <th class="col-md-3"></th>
                </tr>
              </thead>
              <tbody>
                <% @reviews.each do |a| %>
                  <tr>
                    <td>
                      <%= a.user.first_name %>&nbsp;<%= a.user.last_name %>
                    </td>
                    <td>
                      <div class="star-rating" data-score=<%= a.rating %>></div>
                      <%= a.comment %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            
          </div>
          </div>
          <div class="col-md-4">

         
          <!-- Categories Widget -->
          <div class="card">
            <h4 class="card-header">Features</h4>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-12">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <p>Category: &emsp;<%= @restaurant.category.name %></p>
                    </li>
                    <li>
                      <a href="#">HTML</a>
                    </li>
                    <li>
                      <a href="#">Freebies</a>
                    </li>
                  </ul>
                </div>
                
              </div>
            </div>
          </div>
          <div class="card">
            <h4 class="card-header">Address</h4>
            <div class="card-body">
              Address 1: &emsp;<%= @restaurant.address1 %><br>
              Address 2: &emsp;<%= @restaurant.address2 %>
            </div>
          </div>

          <!-- Side Widget -->
          <div class="card">
            <h4 class="card-header">Contact</h4>
            <div class="card-body">
              Phone: &emsp;<%= @restaurant.phone %><br>
              Email: &emsp;<%= @restaurant.email %>
            </div>
          </div>

       

      </div>
      </div>
    